<h1>Upload an Image</h1>

<%= form_for @post, html: { multipart: true } do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.label :image %>
		<%= f.file_field :image %>

	<p>
		<%= f.submit 'Post it!'%>
	</p>
<% end %>